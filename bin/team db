drop database focus_db;
create database focus_db;
use focus_db;

create table msg_log (
		id int not null auto_increment,	
		msg varchar(260),	
		primary key(id)
);

create table user_table (
		id int not null auto_increment,	
		uid varchar(40) unique,
		pwd varchar(20),	
		primary key(id)
);

